<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="stackPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.runemagic.gw2tools.gui.controller.LoginController">
   <children>
      <StackPane fx:id="contentPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
         <children>
            <ImageView fitHeight="152.0" fitWidth="414.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="BOTTOM_RIGHT">
               <image>
                  <Image url="/com/runemagic/gw2tools/res/images/about/rmbanner_invert.png" />
               </image>
            </ImageView>
            <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="110.0" prefWidth="400.0" style="-fx-border-color: grey; -fx-background-color: rgba(33, 33, 33, 0.75); -fx-border-width: 3;">
               <children>
                  <TextField fx:id="txtAPIKey" promptText="Enter your API key here" />
                  <CheckBox fx:id="chkbxRememberKey" mnemonicParsing="false" text="Remember this key">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </CheckBox>
                  <HBox alignment="CENTER_RIGHT" spacing="10.0">
                     <children>
                        <Button fx:id="btnSkip" mnemonicParsing="false" onAction="#onSkip" prefWidth="75.0" text="Skip">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="btnApply" alignment="CENTER" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#onApply" prefWidth="75.0" styleClass="confirm-button" text="Apply" />
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <StackPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </StackPane.margin>
            </VBox>
         </children>
      </StackPane>
      <BorderPane fx:id="overlayPane" pickOnBounds="false" prefHeight="200.0" prefWidth="200.0" />
   </children>
</StackPane>
